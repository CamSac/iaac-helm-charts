{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "ignorePaths": ["**/values.yaml"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["jvmilazz0/kavita"],
      "versioning": "regex:^(?<compatibility>.*)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)?$"
    },
    {
      "matchDatasources": ["github-release"],
      "matchPackageNames": ["github.com/maxlerebourg/crowdsec-bouncer-traefik-plugin"],
      "versioning": "semver"
    }
  ]
}
